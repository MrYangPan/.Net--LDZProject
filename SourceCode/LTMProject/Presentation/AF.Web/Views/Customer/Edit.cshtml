
@{
    ViewBag.Title = "CreateOrEdit";
    Layout = "~/Views/Shared/_LayoutWithMenu.cshtml";
}
@model AF.Web.Models.Customer.CustomerUpdateModel


<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-user"></i>
            <a href="@Url.Action("ListCustomer", "Customer")">用户管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="javascript:void(0);">编辑用户</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->



<div class="row">
    <div class="col-md-12">

        <!-- BEGIN PORTLET-->
        <div class="portlet light bg-inverse">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-user font-red-sunglo"></i>
                    <span class="caption-subject font-red-sunglo bold uppercase">用户编辑</span>
                    <span class="caption-helper">用户信息</span>
                </div>
            </div>

            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal form-row-seperated" }))
                {
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">用户名:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(c => c.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">密码:</label>
                            <div class="col-md-4">
                                @Html.PasswordFor(c => c.PassWord, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">姓名:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(c => c.RealName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">手机号:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(c => c.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">角色:</label>
                            <div class="col-md-2">
                                @Html.DropDownListFor(c => c.RoleId, Model.AvailableRoles, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="@Html.IdFor(d => d.IsActive)">是否激活:</label>
                            <div class="col-md-4">
                                <div class="checkbox">
                                    <label class="checkbox-inline">
                                        @Html.CheckBoxFor(model => model.IsActive)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(c => c.Id)


                    var validationSummary = Html.ValidationSummary(false);
                    if (this.IsPost && !MvcHtmlString.IsNullOrEmpty(validationSummary))
                    {
                        <div class="row">
                            <div class="alert alert-danger col-md-offset-3 col-md-4 margin-top-10">
                                <div class="message-error">@validationSummary</div>
                            </div>
                        </div>
                    }

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green"><i class="fa fa-check"></i> 确认</button>
                                <a class="btn default" href="@Url.Action("ListCustomer", "Customer")">取消</a>
                            </div>
                        </div>
                    </div>

                }
                <!-- END FORM-->

            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
