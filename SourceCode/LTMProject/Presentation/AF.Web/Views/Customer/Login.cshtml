<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            <img src="/Content/Metronic/admin/layout/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form" }))
        {
            var validationSummary = Html.ValidationSummary(true);
            <h3 class="form-title">用户登录</h3>

            if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
            {
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <span>
                     @validationSummary
                    </span>
                </div>
            }

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">用户名</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(d => d.Username, new {@class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "用户名"})
                </div>
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(d => d.Password, new {@class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "密码"})
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    @Html.CheckBoxFor(d=>d.RememberMe)记住密码
                </label>
                <button type="submit" class="btn blue pull-right">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>

        }

        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        2016 &copy; 乐学录题系统
    </div>
    <!-- END COPYRIGHT -->
